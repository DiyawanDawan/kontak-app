<div class="container mt-3">
    <div class="row">
        <div class="col-md-8"></div>
        <h2>Detail Kontak</h2>
      <% if (!contact) { %> 
          <div class="alert alert-danger" role="alert">
            Data Kontak Tidak ada <br> <a href="/contact" class="alert-link">&laquo; Kembali</a>
          </div>
      <% } else { %>
        <div class="card" style="width: 25cqw;">
            <div class="card-body">
              <h5 class="card-title">Nama : <%= contact.nama %></h5>
              <h6 class="zard-subtitle mb-2 text-muted">No Hp :  <%= contact.nohp %></h6>
              <p class="card-text">Email : <%= contact.email %></p>
              <p class="card-text">Nim : <%= contact.nim %></p>
              <p class="card-text">Kelas : <%= contact.kelas %></p>
              <p class="card-text">Semester : <%= contact.semester %></p>
              <a href="/contact/edit/<%= contact.nama  %>" class="btn btn-info badge" >Ubah</a>
              <form action="/contact?_method=DELETE" method="POST" class="d-inline">
                <input type="hidden" name="nama" value="<%= contact.nama  %>">
                <button type="submit" class="btn btn-danger badge" onclick="return confirm('Yakin Mau Hapus Kontak')">Delete</button>
              </form>
              <a href="/contact" class="card-link d-block mt-3">&laquo; Kembali</a>
            </div>
          </div>          
          <% } %>
    </div>
</div>